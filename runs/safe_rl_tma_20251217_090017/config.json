{
  "environment": {
    "sensor_accuracy": 0.95,
    "sensor_failure_rate": 0.01,
    "weather_effects": true,
    "consistency_threshold": 0.3,
    "timeliness_limit": 5
  },
  "agent": {
    "lr": 0.0003,
    "clip_epsilon": 0.2,
    "entropy_coef": 0.01,
    "value_coef": 0.5,
    "max_grad_norm": 0.5,
    "lagrange_lr": 0.001,
    "constraint_thresholds": [
      0.1,
      0.1,
      0.1,
      0.1
    ]
  },
  "training": {
    "buffer_size": 8192,
    "ppo_epochs": 8,
    "minibatch_size": 64,
    "gamma": 0.99,
    "lam": 0.95,
    "total_steps": 1000000
  },
  "logging": {
    "log_interval": 100,
    "use_wandb": false
  },
  "checkpoint": {
    "save_interval": 50
  },
  "shield": {
    "adequacy_threshold": 0.8,
    "consistency_threshold": 0.7,
    "stability_window": 5,
    "timeliness_limit": 10
  }
